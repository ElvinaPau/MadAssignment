<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="146dp"
            android:layout_height="146dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/Reward_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reward Name"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/Title_Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description : "
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/Reward_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/Re_Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details about the rewards"
            android:textSize="12dp"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/Title_Desc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/Title_validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validity :"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/Re_Desc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/Re_validity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12dp"
            android:layout_toRightOf="@id/Title_validity"
            android:layout_below="@id/Re_Desc"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/Reward_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50 points"
            android:textColor="@color/bluish_purple"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/Re_validity"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/redeem_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img1"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="110dp"
            android:text="Redeem" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>